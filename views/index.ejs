<!DOCTYPE html>
<html lang="en" ng-app="app">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    
    <title>Challenge </title>
    <!-- Bootstrap core CSS -->
    <link href="http://getbootstrap.com/dist/css/bootstrap.min.css" rel="stylesheet">
   
  

	<link href="assets/css/style.css" rel="stylesheet">
   
    
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>min
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script> 
	<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.5.0/angular.min.js"></script>	
	<!-- // <script src="http://getbootstrap.com/dist/js/bootstrap.min.js"></script> -->
	<script type="text/javascript" src="javascripts/angular-lazy-img.js"></script>

	<script type="text/javascript" src="javascripts/app.js"></script>


  
	</head>

  <body>
    

	<div class="container " ng-controller="ImgCtrl">	
	 <div class="col-lg-12 text-center header_bx">
                <h1 class="page-header">Demo</h1>
				
				<div class="filter-opt">
                 Amount of points 
				 <select class="form-control" ng-model="userFilter" ng-change="filterChange()">
				   <option value="">-- </option>
				   <option value="0">0</option>
				   <option value="1" >1</option>
				   <option  value="2" >2</option>
				   <option value="3"> >2</option>
				 </select>
			    </div>
			 </div>
				   <div class="row" >

						 
			            <div  class="col-lg-4 col-md-4 col-sm-6 col-xs-12" ng-repeat= "data in ImageData">	

							<div class="hover ehover1" ng-if="data.type=='file'">
								<img style="height:240px;width:320px" class="b-lazy img-responsive" lazy-img="{{data.base_path}}{{data.filename}}"
				 data-src="assets/img/p13.jpg" alt="" src="spinner.gif">
									<div class="overlay">
										<h2><a ng-click="fetchImages('')" ng-if="data.folder=='sub_folder'" href="#">Go To Parent</a>
											<a ng-if="data.folder==''" href="#"></a>
										</h2>
										<button class="btn btn-danger" ng-click="deleteImage(data.id,data.filename,data.folder)"  ><i class="icon-trash icon-white"></i> Delete</button>
										<button class="btn btn-danger" ng-click="verifyImage(data.id,data)"  ><i class="icon-trash icon-white"></i> Verify </button>
										<div class="btn btn-danger"   style="border-radius: 20px;color: #000;background-color: #fff;font-weight: bold"> {{data.counter ? data.counter:0}}</div>	
									</div>				
							</div>
							<div class="hover ehover1" ng-if="data.type=='folder'" ng-click="fetchImages('sub_folder')">
								<img class="b-lazy img-responsive"  alt="" src="folder.gif">
									<div class="overlay">
										<h2><a href="#">{{data.folder}}</a></h2>
									</div>				
							</div>
			            </div>

						
			       
			                
			            </div>

		 <div class="col-lg-12 text-center header_bx">
                <h3 class="page-header">Archieved Images</h3>
		
			 </div>			            

			   <div class="row" >

						 
			            <div  class="col-lg-4 col-md-4 col-sm-6 col-xs-12" ng-repeat= "data in archiveData">	

							<div class="hover ehover1" ng-if="data.type=='file'">
								<img style="height:240px;width:320px" class="b-lazy img-responsive" lazy-img="{{data.base_path}}{{data.filename}}"
				 data-src="assets/img/p13.jpg" alt="" src="spinner.gif">
									<div class="overlay">
										<h2><a  href="#">Archieved Image</a>
											
										</h2>
										
										<div class="btn btn-danger"   style="border-radius: 20px;color: #000;background-color: #fff;font-weight: bold"> {{data.counter ? data.counter:0}}</div>	
									</div>				
							</div>
			            </div>
				
			       
			                
			            </div>


	</div>
	
	
	
	<div class="sect_spc"></div>
	
  </body>
  </html>
  